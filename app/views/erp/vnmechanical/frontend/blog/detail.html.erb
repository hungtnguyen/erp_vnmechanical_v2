<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/frontend/images/bg/bg11.jpg">
    <div class="container pt-10 pb-10">
        <!-- Section Content -->
        <div class="section-content pt-10">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-white"><%= @blog.name %></h1>
                    <ul class="breadcrumb white">
                        <li><a href="<%= erp_vnmechanical.root_path %>">Trang chủ</a></li>
                        <li><a href="<%= erp_vnmechanical.blog_path %>">Tin tức</a></li>
                        <li class="active"><%= @blog.name %></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Blog -->
<section>
    <div class="container mt-30 mb-30 pt-20 pb-20">
        <div class="row">
            <div class="col-md-9">
                <%= render 'erp/vnmechanical/frontend/modules/blog/single_post' %>
            </div>
            <div class="col-md-3">
                <%= render 'erp/vnmechanical/frontend/modules/blog/sidebar' %>
            </div>
        </div>
    </div>
</section>