<!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/frontend/images/bg/bg11.jpg">
    <div class="container pt-10 pb-10">
        <!-- Section Content -->
        <div class="section-content pt-10">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title text-theme-colored">Dịch vụ</h1>
                    <ul class="breadcrumb white">
                        <li><a href="#">Trang chủ</a></li>
                        <li class="active">Dịch vụ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section: Services  -->
<section>
    <div class="container pb-30">
        <div class="section-content">
            <div class="row multi-row-clearfix">
                <% @services.each do |service| %>
                <div class="col-sm-6 col-md-4">
                    <div class="project mb-30">
                        <div class="thumb">
                            <%= image_tag service.image.thumb_360_210, alt: service.name, class: 'img-fullwidth' %>
                            <div class="hover-link">
                                <a href="<%= service_link(service) %>"
                                    class="btn btn-default btn-transparent btn-sm">
                                    <i class="flaticon-attachment"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                        <div class="project-details p-15 pt-10 pb-10">
                            <h2 class="title font-weight-700 font-15 mt-5 mb-5"><%= service.name %></h2>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>