<% if !@newest_blogs.empty? %>
<% if @newest_blogs.count >= 3 %>
<!-- Section: blog -->
<section id="blog" class="bg-no-repeat bg-img-right-bottom" data-bg-img="/frontend/images/photos/2.png">
    <div class="container pb-sm-30">
        <div class="section-title text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-uppercase line-bottom-center mt-0">Bản tin <span class="text-theme-colored">mới nhất</span></h2>
                    <p>Chia sẻ và cập nhật những tin tức bổ ích đến với khách hàng</p>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                <% @newest_blogs.each_with_index do |blog,index| %>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <article class="post clearfix bg-lighter mb-sm-30">
                        <div class="entry-header">
                            <div class="post-thumb thumb">
                                <%= link_to image_tag(article_image(blog.image.medium, 'medium'), alt: blog.name, class: 'img-responsive img-fullwidth'), blog_link(blog) %>
                            </div>
                        </div>
                        <div class="entry-content p-20">
                            <h4 class="entry-title text-white text-uppercase font-16">
                                <%= link_to blog.name, blog_link(blog), class: 'font-weight-500' %>
                            </h4>
                            <div class="entry-meta">
                                <ul class="list-inline font-12 mb-10">
                                    <li><i class="fa fa-user text-theme-colored mr-5"></i>Đăng bởi: Admin </li>
                                    <li><i class="fa fa-calendar text-theme-colored mr-5"></i> <%= blog.created_at.strftime("%b %d, %Y") %> </li>
                                    <li><i class="fa fa-eye text-theme-colored mr-5"></i>45 lượt xem</li>
                                </ul>
                            </div>
                            <p class="mt-5"><%= short_text(blog.content, 20) %>...</p>
                            <%= link_to 'Xem chi tiết', blog_link(blog), class: 'btn btn-theme-colored btn-sm mt-10' %>
                        </div>
                    </article>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
<% end %>
<% end %>