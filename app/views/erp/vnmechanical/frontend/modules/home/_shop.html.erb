<!-- Section: Shop  -->
<section id="shop">
    <div class="container pb-30">
        <div class="section-title text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-uppercase line-bottom-center mt-0">Sản phẩm <span class="text-theme-colored">tiêu biểu</span></h2>
                    <p>Một số sản phẩm bên dưới thường là sự lựu chọn của đa số các khách hàng của chúng tôi</p>
                </div>
            </div>
        </div>
        <div class="row multi-row-clearfix">
            <div class="col-md-12">
                <div class="products owl-carousel-4col">
                    <% popular_products.limit(20).each do |product| %>
                        <div class="item">
                            <div class="product">
                                <% if product.is_new? %>
                                <span class="tag-new">Mới</span>
                                <% end %>
                                <% if product.is_deal? %>
                                <span class="tag-sale">Giảm <%= product.deal_percent %>%</span>
                                <% end %>
                                <div class="product-thumb">
                                    <%= link_to image_tag(product_image(product.product_images, 'first', 'thumb445'), alt: product.product_name, class: "img-responsive img-fullwidth"), product_link(product), title: product.product_name %>
                                    <div class="overlay">
                                        <div class="btn-add-to-cart-wrapper">
                                            <a class="btn btn-theme-colored btn-sm btn-flat pl-20 pr-20 btn-add-to-cart text-uppercase font-weight-700" href="<%= erp_vnmechanical.contact_us_path %>" target="_blank">Đặt hàng</a>
                                        </div>
                                        <div class="btn-product-view-details">
                                            <a class="btn btn-default btn-theme-colored btn-sm btn-flat pl-20 pr-20 btn-add-to-cart text-uppercase font-weight-700" href="<%= product_link(product) %>">Chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-details text-center">
                                    <a href="<%= product_link(product) %>" title="<%= product.product_name %>">
                                        <h5 class="product-title"><%= truncate(product.product_name, length: 25) %></h5>
                                    </a>
                                    <% if false %>
                                        <div class="star-rating" title="Rated 3.50 out of 5"><span data-width="67%">3.50</span></div>
                                    <% end %>
                                    <div class="price">
                                        <% if product.is_sold_out? || product.is_call? || product.product_price.nil? %>
                                            <span class="call-me">Giá liên hệ: <a href="tel:0947 748 895">0947 748 895</a></span>
                                        <% else %>
                                            <% if product.is_deal %>
                                                <del><span class="amount"><%= format_price(product.price) %></span></del>
                                            <% end %>
                                            <ins><span class="amount"><%= format_price(product.product_price) %></span></ins>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>